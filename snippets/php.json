	"tr": {
		"prefix": "tr",
		"body": [
			"try {",
			"$1",
			"} catch(Exception \\$e) {",
			"}"
		],
		"description": "Try-Catch"
	},
	"trj": {
		"prefix": "trj",
		"body": [
			"try {",
			"$1",
			"} catch(Exception \\$e) {",
			"echo json_encode(['error' => \\$e->getMessage()]);",
			"}"
		],
		"description": "Try-Catch json echo"
	},
	"trtr": {
		"prefix": "trtr",
		"body": [
			"try {",
			"ORM::get_db()->beginTransaction();",
			"",
			"$1",
			"",
			"ORM::get_db()->commit();",
			"} catch(Exception \\$e) {",
			"if(ORM::get_db()->inTransaction())",
			"ORM::get_db()->rollBack();",
			"}"
		],
		"description": "Try-Catch mit PDO Transaction"
	},
	"trtrj": {
		"prefix": "trtrj",
		"body": [
			"try {",
			"ORM::get_db()->beginTransaction();",
			"",
			"$1",
			"",
			"ORM::get_db()->commit();",
			"} catch(Exception \\$e) {",
			"if(ORM::get_db()->inTransaction())",
			"ORM::get_db()->rollBack();",
			"",
			"echo json_encode(['error' => \\$e->getMessage()]);",
			"}"
		],
		"description": "Try-Catch mit PDO Transaction"
	},
